    <description>This widget loads another page where it's placed. Created to support recursive solutions.</description>

    <icon />

    <properties>
        <property key="page" type="form" required="false">
			<caption>Page</caption>
			<category>Data source</category>
			<description>The page to be loaded.</description>
		</property>
    </properties>
</widget>

